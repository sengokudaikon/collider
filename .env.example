# Environment variables for local development
# Copy this file to .env and modify as needed

# Application Settings
ENVIRONMENT=development
PORT=8880
RUST_LOG=debug
RUST_BACKTRACE=1

# Logging Configuration
LOG_TO_FILE=true

# Database Configuration
# For single PostgreSQL (no replica):
# DATABASE_URL=postgres://postgres:postgres@localhost:5434/postgres

# For PostgreSQL with replica via PgBouncer (recommended):
DATABASE_URL=postgresql://postgres:postgres@localhost:6434/postgres
DATABASE_READ_REPLICA_URL=postgresql://postgres:postgres@localhost:6435/postgres

POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# docker-compose Overrides
COMPOSE_PROJECT_NAME=collider
COMPOSE_FILE=docker-compose.yml